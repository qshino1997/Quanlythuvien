<% if object.errors.any? %>
  <div id="error_explanation" style=" text-align: -moz-center">
    <div class="alert alert-danger">
      Vui lòng kiểm tra lại, form có <%= pluralize(object.errors.count, "lỗi").classify %>.
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>